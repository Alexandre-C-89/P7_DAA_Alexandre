<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/linear_layout_coworker_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/button_radius_primary_color"
        />

    <TextView
        android:id="@+id/linear_layout_coworker_name_restaurant_liked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/linear_layout_coworker_img"
        android:layout_centerVertical="true"
        android:text="coworker name restaurant liked"
        android:textSize="16sp"
        android:textStyle="bold" />



</RelativeLayout>