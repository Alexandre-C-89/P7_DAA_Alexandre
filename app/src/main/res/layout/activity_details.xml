<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/picture_resto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/map_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/choice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@id/picture_resto"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        app:srcCompat="@drawable/fui_ic_check_circle_black_128dp"
        android:backgroundTint="@color/white"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/picture_resto"
        android:background="#FF5722"
        android:id="@+id/layout"
        >

        <TextView
            android:id="@+id/name_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@color/white"
            />
        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="#FFEB3B"
            android:rating="2"
            android:stepSize="1"
            app:layout_constraintStart_toEndOf="@id/name_restaurant"
            app:layout_constraintTop_toTopOf="@id/name_restaurant"
            />
        <TextView
            android:id="@+id/adresse_resto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_restaurant"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@color/white"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/phone_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/call_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/call_icon"
        android:text="Phone"
        android:textColor="#CD3B0E"
        android:background="@android:color/transparent"
        />
    <Button
        android:id="@+id/like_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/star_icon"
        app:layout_constraintStart_toEndOf="@id/phone_button"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Like"
        android:textColor="#CD3B0E"
        android:background="@android:color/transparent"
        />
    <Button
        android:id="@+id/website_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/map_icon"
        app:layout_constraintStart_toEndOf="@id/like_button"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="WebSite"
        android:textColor="#CD3B0E"
        android:background="@android:color/transparent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listworkmatesjoining"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/phone_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_detail_restaurant_coworker"
        android:layout_marginHorizontal="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>