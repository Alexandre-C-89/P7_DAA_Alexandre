<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/detail_restaurant_coworker_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/button_radius_primary_color"
            />

        <TextView
            android:id="@+id/detail_restaurant_coworker_name_restaurant_liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/detail_restaurant_coworker_img"
            android:layout_toEndOf="@+id/detail_restaurant_coworker_img"
            app:layout_constraintLeft_toRightOf="@id/detail_restaurant_coworker_img"
            app:layout_constraintTop_toTopOf="@id/detail_restaurant_coworker_img"
            app:layout_constraintBottom_toBottomOf="@+id/detail_restaurant_coworker_img"
            android:layout_margin="16dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="coworker name restaurant liked"
            android:textSize="16sp"
            android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>