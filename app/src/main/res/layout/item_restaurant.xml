<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/linear_layout_restaurant_img"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/button_radius_primary_color"
        />

    <TextView
        android:id="@+id/linear_layout_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/linear_layout_restaurant_img"
        android:ellipsize="end"
        android:lines="1"
        android:text="restaurant name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/linear_layout_restaurant_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_restaurant_name"
        android:layout_toEndOf="@+id/linear_layout_restaurant_img"
        android:layout_marginTop="-22dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="16sp" />

        <TextView
            android:id="@+id/linear_layout_restaurant_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_restaurant_distance"
            android:layout_toEndOf="@+id/linear_layout_restaurant_img"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/linear_layout_restaurant_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_restaurant_type"
            android:layout_toEndOf="@+id/linear_layout_restaurant_img"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/linear_layout_restaurant_coworker_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_restaurant_address"
            android:layout_toEndOf="@+id/linear_layout_restaurant_img"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/linear_layout_restaurant_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_restaurant_coworker_like"
            android:layout_toEndOf="@+id/linear_layout_restaurant_img"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/linear_layout_restaurant_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_restaurant_time"
            android:layout_toEndOf="@+id/linear_layout_restaurant_img"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="16sp" />

</RelativeLayout>